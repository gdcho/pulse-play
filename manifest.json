{
  "manifest_version": 3,
  "name": "Pulse Play",
  "version": "1.0.0",
  "description": "Hold a hotkey to temporarily speed up video playback on any website",

  "permissions": ["activeTab", "storage"],

  "background": {
    "service_worker": "background/service-worker.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shared/settings.js", "content/content-script.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Video Speed Hotkey Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "host_permissions": ["https://*/*", "http://*/*"]
}
